<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarStyle">@style/MyCustomActionBar</item>
  </style>
  <!-- Custom ActionBar style -->
  <style name="MyCustomActionBar" parent="@style/Widget.AppCompat.ActionBar">
    <item name="titleTextStyle">@style/MyActionBarTitleText</item>
  </style>

  <!-- Title Text style -->
  <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
  <item name="android:textColor">#000000</item> <!-- Your desired color -->
  <item name="android:textSize">20sp</item>
  </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
      <item name="windowSplashScreenAnimatedIcon">@drawable/target_icon</item>
      <item name="windowSplashScreenBackground">@color/light_gray</item>
      <item name="windowSplashScreenIconBackgroundColor">@color/colorPrimaryDark</item>
      <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>
